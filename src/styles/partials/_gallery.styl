.gallery-container
  display: flex
  flex-direction: row
  flex-wrap: wrap
  width: 70%
  margin-left: auto
  margin-right: auto
  justify-content: space-between
  position: relative
  @include breakpoint($tablet)
    width: 90%
  .gallery-image
    max-width: 30%
    height: 300px
    margin: 10px
    position: relative
    @include breakpoint($tablet)
      max-width: 100%
      min-width: 100%
      margin: 0
    img
      background-size: cover
      height: 100%
      width: 100%

    .gallery-image-mask
      position: absolute
      top: 0
      width: 100%
      height: 100%
      color: transparent
      display: flex
      justify-content: center
      align-items: center
      font-size: 20px
      &:hover
        background: rgba(black, .7)
        color: white
