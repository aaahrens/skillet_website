@import 'variables/colors'
@import 'variables/sizes'
@import 'mixins'


.location-container
  display: flex
  flex-direction: row
  flex-wrap: wrap
  .map
    max-width: 70%
    height: 80vh
    flex: 1
    iframe
      width: 100%
      height: 100%
      z-index: -1
    @include breakpoint($tablet)
      min-width: 100%
      height: 400px
  .one
    font-size: 150%
    padding: 10px
    flex: 1
    max-width: 30%
    @include breakpoint($tablet)
      min-width: 100%